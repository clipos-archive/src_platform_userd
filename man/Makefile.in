ifndef VERBOSE
MAKEFLAGS += -s --no-print-directory
ECHO = echo
else 
ECHO = echo > /dev/null
endif

CC = @CC@
srcdir = @srcdir@
SHELL = @SHELL@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@ 
PREFIX = @prefix@
datarootdir = @datarootdir@
prefix = @prefix@
mandir = @mandir@
build_server = @build_server@
build_red = @build_red@
build_black = @build_black@

PODS := 
ifeq (${build_server}, yes)
PODS += userd.pod
endif
ifeq (${build_client}, yes)
PODS += userclt.pod
endif
DIR := man8

PAGES := ${foreach file, ${basename ${PODS}}, ${DIR}/${file}.8}


build: $(DIR) $(PAGES)

$(DIR):
	mkdir -p $(DIR)

${DIR}/%.8:%.pod Makefile
	@${ECHO} "        POD2MAN           $<"
	pod2man -c="CLIP Utilities" -s=8 -r="${PACKAGE}-${VERSION}" $< > $@


install:
	list='$(PAGES)'; for page in $$list; do \
		${ECHO} "        INST              ${DESTDIR}${mandir}/$$page" ;\
		install -D $$page ${DESTDIR}${mandir}/$$page ;\
	done

uninstall:
	list='$(PAGES)'; for page in $$list; do \
		${ECHO} "        RM                ${DESTDIR}${mandir}/$$page" ;\
		rm -f ${DESTDIR}${mandir}/$$page ;\
	done

clean:
	@${ECHO} "        CLEAN            $(PAGES)"
	rm -f $(PAGES)

mrproper: clean
	rmdir $(DIR)
	rm -f Makefile

